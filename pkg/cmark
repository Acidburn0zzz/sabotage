[deps.host]
cmake

[build]
mkdir build && cd build
CFLAGS="-D_GNU_SOURCE $optcflags" LDFLAGS="$optldflags" \
  cmake -DCMAKE_INSTALL_PREFIX="$butch_prefix" ..
make -j$MAKE_THREADS
make DESTDIR="$butch_install_dir" install
