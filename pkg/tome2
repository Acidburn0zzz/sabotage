ncurses

[deps.host]
cmake
wget

[build]
CFLAGS="-D_GNU_SOURCE $optcflags" LDFLAGS="$optldflags" \
cmake -DCMAKE_INSTALL_PREFIX="$butch_prefix" -DSYSTEM_INSTALL:BOOL=true .
make -j$MAKE_THREADS
make DESTDIR="$butch_install_dir" install
