[deps.host]
dynamic-toolchain

[deps]
libusbx

[build]
[ -n "$CROSS_COMPILE" ] && \
  xconfflags="--host=$($CC -dumpmachine|sed 's/musl/gnu/') \
  --with-sysroot=$butch_root_dir"

CFLAGS="$optcflags" \
LDFLAGS="$optldflags" \
  ./configure --prefix="$butch_prefix" $xconfflags \
  --sbindir="$butch_prefix"/bin
make -j$MAKE_THREADS
make DESTDIR="$butch_install_dir" install
