#!/bin/sh

tarxf http://mirror.wzff.de/butch/ butch-0.0.8 .tar.bz2 butch

filesize='59105'
sha512='9e1e20457c512f563919569ca9dd12d803e20f8602634c96772dc7b350272daab41f9c645ed66caacff5d5015ac05c05a3f4b1de6e99c8696041914578282c40'

filename="$S"/butch-0.0.8.tar.bz2

read sz _ <<EOF
$(du -b "$filename")
EOF

if [ "$sz" != "$filesize" ]; then
    printf -- "error: build-butch: wrong filesize. got: %d expected: %d\n" "$sz" "$filesize"
    exit 1
fi

read sha _ <<EOF
$(sha512sum "$filename")
EOF

if [ "$sha" != "$sha512" ]; then
    printf -- "error: build-butch: hash doesn't match.\n"
    exit 1
fi


./build.sh
cp butch/butch "$S"/butch.bin
cp "$filename" "$C"/

